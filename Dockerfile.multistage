# Stage 1: build & test
FROM node:20-slim AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm test

# Stage 2: final image
FROM node:20-slim
WORKDIR /app
COPY --from=build /app/package*.json ./
COPY --from=build /app/index.js ./
COPY --from=build /app/public ./public
EXPOSE 3000
CMD ["npm", "start"]
